<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/r_station_txv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Saint Sharle" />


    <TextView
        android:id="@+id/r_station_txv_ebike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="sans-serif-medium"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintBottom_toBottomOf="@+id/r_station_imv_logo"
        app:layout_constraintStart_toEndOf="@+id/r_station_imv_logo"
        tools:text="ebike: 15" />

    <TextView
        android:id="@+id/r_station_txv_mechanical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintBottom_toBottomOf="@+id/r_station_imv_logo"
        app:layout_constraintStart_toEndOf="@+id/r_station_txv_ebike"
        app:layout_constraintTop_toBottomOf="@+id/r_station_txv_name"
        tools:text="mechanical: 30" />

    <ImageView
        android:id="@+id/r_station_imv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/r_station_txv_name"
        app:srcCompat="@drawable/ic_baseline_menu_bike_24" />

</androidx.constraintlayout.widget.ConstraintLayout>